<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Google Sheets Sync</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="card">
                    <div class="card-header">
                        <h3>Google Sheets Синхронизация</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <button id="syncBtn" class="btn btn-primary">Синхронизировать с Google Sheets</button>
                        </div>
                        <div id="result" class="alert" style="display: none;"></div>
                        <div class="mt-3">
                            <h5>Статус подключения:</h5>
                            <ul id="statusList">
                                <li>Проверка переменных окружения...</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        document.getElementById('syncBtn').addEventListener('click', async function() {
            const btn = this;
            const resultDiv = document.getElementById('result');
            
            btn.disabled = true;
            btn.textContent = 'Синхронизация...';
            resultDiv.style.display = 'none';
            
            try {
                const response = await fetch('/api/sync/sheets', {
                    method: 'POST'
                });
                
                const data = await response.json();
                
                resultDiv.className = data.success ? 'alert alert-success' : 'alert alert-danger';
                resultDiv.textContent = data.message || (data.success ? 'Синхронизация успешна!' : 'Ошибка синхронизации');
                resultDiv.style.display = 'block';
                
            } catch (error) {
                resultDiv.className = 'alert alert-danger';
                resultDiv.textContent = 'Ошибка подключения к серверу';
                resultDiv.style.display = 'block';
            } finally {
                btn.disabled = false;
                btn.textContent = 'Синхронизировать с Google Sheets';
            }
        });

        // Проверяем статус при загрузке страницы
        window.addEventListener('load', async function() {
            const statusList = document.getElementById('statusList');
            
            try {
                const response = await fetch('/api/sync/status');
                const data = await response.json();
                
                statusList.innerHTML = '';
                
                if (data.googleSheets) {
                    statusList.innerHTML += '<li class="text-success">✅ Google Sheets API настроен</li>';
                } else {
                    statusList.innerHTML += '<li class="text-danger">❌ Google Sheets API не настроен</li>';
                }
                
                if (data.database) {
                    statusList.innerHTML += '<li class="text-success">✅ База данных подключена</li>';
                } else {
                    statusList.innerHTML += '<li class="text-danger">❌ База данных не подключена</li>';
                }
                
            } catch (error) {
                statusList.innerHTML = '<li class="text-danger">❌ Ошибка проверки статуса</li>';
            }
        });
    </script>
</body>
</html> 